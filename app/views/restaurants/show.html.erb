<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>


<% @restaurant.reviews.each do |rev| %>
<%= rev.content  %>
<%= rev.rating  %>
<% end %>

<%= form_for @review, as: :review, url: restaurant_reviews_path(@restaurant) do |f| %>

  <%= f.label :content %>:
  <%= f.text_field :content %><br />

  <%= f.label :rating %>:
  <%= f.number_field :rating %><br />

  <%= f.submit %>
<% end %>


<%= link_to 'Back', restaurants_path %>

